<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se233.chapter3.controller.MainViewController">
   <children>
      <MenuBar prefHeight="20.0" prefWidth="400.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane prefHeight="240.0" prefWidth="200.0">
         <children>
            <ProgressBar fx:id="progressBar" layoutX="20.0" layoutY="190.0" prefWidth="150.0" progress="0.0" />
            <Label layoutX="20.0" layoutY="20.0" text="Drop PDF files below:" />
            <Region fx:id="dropRegion" layoutX="20.0" layoutY="45.0" prefHeight="120.0" prefWidth="150.0" style="-fx-background-color: black;" />
             <ListView fx:id="inputListView" layoutX="10" layoutY="45.0" prefHeight="150" prefWidth="180" style="-fx-border-color: black;" />
            <Button fx:id="startButton" layoutX="20.0" layoutY="200.0" prefHeight="20.0" prefWidth="156.0" text="Start Indexing"/>
         </children>
      </AnchorPane>
      <Pane>
         <children>
            <ListView fx:id="listView" prefHeight="240.0" prefWidth="200.0" />
         </children>
      </Pane>
   </children>
</FlowPane>
